



<div class="ibox-content m-b-sm border-bottom">
  <div class="p-xs">
    <div class="pull-left m-r-md">
      <i class="fa fa-diamond fa-5x text-navy mid-icon"></i>
    </div>
    <h2>Divisions</h2>
    <span>View all the related template categories. You can simply add these to your tasks by just one click.</span>
  </div>
</div>


  <div class="row">
    
        <div class="col-lg-9">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="input-group">
                        <input type="text" id="example-input1-group2" name="example-input1-group2" class="form-control" placeholder="Search">
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-effect-ripple btn-primary"><i class="fa fa-search"></i></button>
                            
                        </span>
                    </div>
                    <div>

                    </div>
                </div>
            </div>
        </div>

        <div class= "col-lg-3">
            <div class="panel panel-default">
                <div class="panel-body">
                  <div class="ibox-tools" style="text-align: center;">
                  <a href="#" data-toggle="modal" id="createModel" data-target="#myModal5" class="btn btn-primary btn-xs">Create New Category</a> 
                  </div>
             </div>
          </div>      
            
        </div>


    
    </div> <!-- End row -->



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">

 <%@divisions.female.each do |division| %>
        <div class="col-lg-6">
            <div class="contact-box">

                <div class="col-2">
                    <div class="text-center">

                      <h3><strong><%= division.main%></strong></h3>
                    </div>
                </div>
                
                <div class="col-8">
                    <div class="text-center">
                        <!-- <img alt="image" class="img-circle m-t-xs img-responsive" src="img/a1.jpg"> -->
                        <!-- <i class="fa fa-file-o" style="font-size: 85px;"></i> -->
                        <%= image_tag division.avatar.url(:medium) %>
                    </div>
                </div>
                <div class="col-2"><br />
                    <div class="text-center">    
                        <p><%= truncate(division.description, :length => 150)%></p>
                        <p><%= link_to "edit",edit_division_path(division), class: "btn btn-primary btn-xs", :style=>'color:#FFFFFF;' %>
                           <%= link_to 'delete', division, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs", :style=>'color:#FFFFFF;'%>
                        </p>  
                    </div>   
                                              
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
        <%end%>

               
    </div>
    
</div>




  <!-- Modal form -->

  <div class="modal inmodal fade" id="myModal5" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
          <h4 class="modal-title">Create Group</h4>
          <small class="font-bold">Please fill the required fields.</small>
        </div>
        <div class="modal-body">

<!--  -->

            <%= form_for @division, class: 'form-horizontal p-20',  html: { multipart: true } do |f| %>
              

              <div class="form-group">
                  <label class="col-md-2 control-label">Main Category</label>
                  <div class="col-md-10">
                    <%= f.select(:main, Division.mains.keys, {}, { :class => 'form-control' }) %>

                  </div>
              </div>
            <br /><br /><br />
                <div class="form-group">
                  <label class="col-md-2 control-label"><%= f.label :for %></label>
                  <div class="col-md-10">
                    <%= f.select(:for, Division.fors.keys, {}, { :class => 'form-control' }) %>
                  </div>
              </div>
            <br /><br />
              <div class="form-group">
                  <label class="col-md-2 control-label">Image</label>
                  <div class="col-md-10">
                    <%= f.file_field :avatar, class: 'form-control', required: true%>
                  </div>
              </div>
            <br /><br />
              <div class="form-group">
                  <label class="col-md-2 control-label">Description</label>
                  <div class="col-md-10">
                    <%= f.text_area :description, class: 'form-control', placeholder: 'Description..', required: true%>
                  </div>
              </div>
              <br /><br /><br /><br /><br />
               <div class="form-group">
                  <%= f.submit 'Create', :class => 'btn btn-purple col-md-2 pull-right' %>
              </div>
             
            <% end %>

        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>

        </div>
      </div>
    </div>
  </div>