
<div class="ibox-content m-b-sm border-bottom" >
    <div class="p-xs">
        <div class="pull-left m-r-md">
            <i class="fa fa-user fa-5x text-navy mid-icon"></i>
        </div>
        <h2>Users</h2>
        <span>Create and manage your users. You can also actviate/deactivate them at any point of time. To view individual users activity please go to the deatils page of individual user.</span>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInUp ibox-content m-b-sm">

            <div class="ibox">
                <div class="ibox-title">
                    <h5>Users under this admin</h5>
<!--                     <div class="ibox-tools">
                        <a href="#" data-toggle="modal" data-target="#myModal5" class="btn btn-primary btn-xs" id="createModel">Create New User</a> 
                    </div> -->
                </div>
                <div class="ibox-content">
                    <div class="project-list">
                        <table class="table table-hover" id="users_table">
                            <tbody>
                                <% @users.each do |user| %>
                                <tr id="row_<%= user.id %>">

                                    <td class="project-status">
                                        <span  class="<%= user.device.present? ? 'label label-primary' : 'label label-default' %>" >
                                            <%= user.device.present? ? 'Device present' : 'Device not there' %>
                                        </span>
                                    </td>
                                    <td class="project-title">
                                        <%= link_to user.first_name, user %>
                                        <br/>
                                        <small>Created at <%= user.created_at %></small>
                                    </td>
                                    <td class="project-completion">
                                    </td>
                                    <td class="project-people">

                                    </td> 
                                    <td class="project-actions">
                                        <%= link_to user, method: :delete,  data: {confirm: 'Are you sure?'}, class: 'btn btn-white btn-sm user-destroy' do %>
                                            <i class="fa fa-times"></i> Delete
                                        <% end %>

                                    </td>                                
                                </tr>
                                <% end %>
                            </tbody>
                        </table>
                        <div class="pagination">
                        <% #will_paginate @users %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
