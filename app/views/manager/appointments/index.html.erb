


<div class="ibox-content m-b-sm borer-bottom" >
    <div class="p-xs">
        <div class="pull-left m-r-md">
            <i class="fa fa-user fa-5x text-navy mid-icon"></i>
        </div>
        <h2>Appointments</h2>
        <span>Create and manage your users. You can also actviate/deactivate them at any point of time. To view individual users activity please go to the deatils page of individual user.</span>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInUp ibox-content m-b-sm">

            <div class="ibox">
                <div class="ibox-title">
                    <h5>Appointments</h5>
                </div>
                <div class="ibox-content">
                    <div class="project-list">
                        <table class="table table-hover" id="users_table">
                            <tbody>
                             <% @appointments.each do |appointment| %>
                                <tr id="row_<%= appointment.id %>">

                                    <td><%=appointment.id%></td>
                                    <td><%=appointment.user.nil? ? "" :  appointment.user.first_name%></td>
                                    <td><%=appointment.user.nil? ? "" : appointment.user.email%></td>
                                    <td><%=appointment.appointment_date%></td>
                                    <td><%=appointment.appointment_time.hour.to_s + "h " + appointment.appointment_time.min.to_s + "m" %></td>
                                    <td><span class="label label-info"><%=appointment.status%></span></td>
                                    <td><%= link_to "Approve", approve_appointment_appointment_path(appointment), :class => "btn btn-icon btn-success m-b-5", method: :put, data: { confirm: 'Are you sure?' } %></td>
                                    <td><%= link_to "Decline", decline_appointment_appointment_path(appointment), :class => "btn btn-icon btn-danger m-b-5", method: :put, data: { confirm: 'Are you sure you want to decline appointment ?' } %></td>
                                    <td><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
                                    send message
                                </button></td>
                                </tr>
                                <% end %>
                            </tbody>
                        </table>
                        <div class="pagination">
                        <% #will_paginate @users %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



